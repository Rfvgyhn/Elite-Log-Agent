<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="EliteLogAgent.Views.GeneralSettingsView">
    <StackPanel>
        <StackPanel.Styles>
            <Style Selector="StackPanel > :is(Control)">
                <Setter Property="Margin" Value="0 0 0 5" />
            </Style>
        </StackPanel.Styles>
        <CheckBox IsChecked="{Binding RunOnStartup}" IsVisible="{Binding ShowRunOnStartup}">Autorun agent on sign-in</CheckBox>
        <CheckBox IsChecked="{Binding LogToCloud}">Report errors to Cloud service</CheckBox>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Log Level" VerticalAlignment="Center" Margin="0 0 5 0" />
            <ComboBox Items="{Binding LogLevels}" SelectedItem="{Binding LogLevel}" />
        </StackPanel>
    </StackPanel>
</UserControl>
